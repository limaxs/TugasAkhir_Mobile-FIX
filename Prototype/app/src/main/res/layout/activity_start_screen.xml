<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#205373"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".startScreen">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/mywhite"
        android:id="@+id/Logo"
    android:layout_centerHorizontal="true"/>

    <TextView android:text="Selamat Datang di Makan Yuk" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:layout_below="@id/Logo"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/KeywordPencarian"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:text="Cari"
        android:layout_below="@+id/KeywordPencarian"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
